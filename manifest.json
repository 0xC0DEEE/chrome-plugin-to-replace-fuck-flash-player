{
    "manifest_version": 2,
    "default_locale": "zh_CN",
    "name": "__MSG_extName__",
    "version": "0.1.2",
    "description": "__MSG_extDesp__",
    "icons": { "128": "icon_128.png", "32":"icon_32.png" },
    //"options_page": "options.html",
    /*
    "browser_action": {
        "default_icon": "empty.png",
        "default_popup": "popup.html"
    },
    */
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage",
        "<all_urls>"
    ],

    "web_accessible_resources": [
        "seed.js",
        "sites/youku.js",
        "sites/tudou.js"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "run_at": "document_end",
        "matches": [
            "http://*.youku.com/*",
            "http://*.tudou.com/*"
        ],
        "js": ["seed.js", "content.js"]
        //"css": ["styles/popup.css"]
    }]
}
